<?xml version="1.0" encoding="utf-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="myService" class="com.learn.services.MyService" scope="singleton">
        <constructor-arg name="myRepository" ref="repository"/>
    </bean>

    <bean id="yourService" class="com.learn.services.YourService" scope="prototype">
        <property name="name" value="Thomas Edison"/>
    </bean>

    <bean id="repository" class="com.learn.repositories.MyRepositoryImpl"/>

</beans>
